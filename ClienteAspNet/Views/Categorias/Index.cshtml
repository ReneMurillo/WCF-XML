@model List<ClienteAspNet.Models.CategoriasView>

@{
    ViewBag.Title = "Index";
}

<h2>Categorías</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Descripción
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {  id=item.CategoriaId  }, new { @class = "btn btn-warning"}) |
            @Html.ActionLink("Detalle", "Details", new {  id=item.CategoriaId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.CategoriaId } , new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
